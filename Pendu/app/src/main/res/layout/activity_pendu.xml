<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/blueClair"
    android:layout_height="match_parent"
    tools:context="com.example.metaxiii.pendu.PenduActivity">

    <TextView
        android:id="@+id/dead_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/rouge"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/image_pendu"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/first"
        android:contentDescription="@string/description" />

    <LinearLayout
        android:id="@+id/word_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_pendu"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

    </LinearLayout>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_below="@+id/word_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/linearLayoutCompat">

        <EditText
            android:id="@+id/letter"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:maxLength="1" />

        <Button
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/send" />

    </android.support.v7.widget.LinearLayoutCompat>

</RelativeLayout>
